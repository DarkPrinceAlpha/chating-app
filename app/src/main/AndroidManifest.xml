<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="najfi.ali67.whatsappclone">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WhatsappClone">
        <activity
            android:name="najfi.ali67.ChattingApp.SettingsActivity"
            android:exported="false" />
        <activity
            android:name="najfi.ali67.ChattingApp.GroupChatActivity"
            android:exported="false" />
        <activity
            android:name="najfi.ali67.ChattingApp.ChatDetailActivity"
            android:exported="false" />
        <activity
            android:name="najfi.ali67.ChattingApp.SignInActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="najfi.ali67.ChattingApp.SignupActivity"
            android:exported="true" />
        <activity
            android:name="najfi.ali67.ChattingApp.MainActivity"
            android:exported="true" />
    </application>

</manifest>